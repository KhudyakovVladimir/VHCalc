<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:theme="@style/AppThemeWood"
        android:id="@+id/constraintLayout"
        android:background="@drawable/back_wood">
    <TextView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/textView"
            android:gravity="right"
            android:maxLines="1"
            android:maxLength="9"
            android:ellipsize="end"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="60sp"
            android:textColor="#EFF2F4"/>
    <Button
            android:text="M"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:id="@+id/M"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="7"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/M"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="8"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/MR"
            app:layout_constraintStart_toEndOf="@+id/button7"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="9"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button9"
            app:layout_constraintTop_toBottomOf="@+id/buttonDel"
            app:layout_constraintStart_toEndOf="@+id/button8"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="/"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:id="@+id/buttonDivide"
            app:layout_constraintTop_toBottomOf="@+id/buttonC"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="4"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="5"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button4"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="6"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button5"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="*"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:id="@+id/multiply"
            app:layout_constraintTop_toBottomOf="@+id/buttonDivide"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="-"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:id="@+id/buttonMinus"
            app:layout_constraintTop_toBottomOf="@+id/multiply"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="."
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/buttonDot"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button0"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="2"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button1"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="3"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button2"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="="
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/buttonResult"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/buttonDot"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="1"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="0"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:id="@+id/button0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="+"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:id="@+id/buttonPlus"
            app:layout_constraintTop_toBottomOf="@+id/buttonMinus"
            app:layout_constraintStart_toEndOf="@+id/buttonResult"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="MR"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:id="@+id/MR"
            app:layout_constraintStart_toEndOf="@+id/M"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="@string/del"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:id="@+id/buttonDel"
            app:layout_constraintStart_toEndOf="@+id/MR"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <Button
            android:text="C"
            android:layout_width="78dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:id="@+id/buttonC"
            app:layout_constraintStart_toEndOf="@+id/buttonDel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.405"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="24sp"
            android:textColor="#ECEEEF"
            android:background="@drawable/button_wood_1"/>
    <TextView
            android:layout_width="37dp"
            android:layout_height="34dp"
            android:id="@+id/textViewOperation"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginStart="8dp"
            android:textSize="30sp"
            android:textColor="#ECEEEF"/>
    <TextView
            android:layout_width="37dp"
            android:layout_height="34dp"
            android:id="@+id/textViewMemory"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView"
            android:layout_marginTop="56dp"
            android:textSize="30sp"
            android:textColor="#ECEEEF"/>
</androidx.constraintlayout.widget.ConstraintLayout>